/* 动态内容 */
.news_out{
  width: 90%;
  margin: 0 auto;
  margin-top: 20rpx;
}
.news_in_1{
  margin-top: 10rpx;
  display: flex;
  flex-wrap: wrap;
}
.news_in_1 image{
  width: 100rpx;
  height: 100rpx;
  border-radius: 50rpx;
}
.news_in_1_text{
  margin-left: 20rpx;
  width: 50%;
}
.news_in_1_text_title{
  height: 50rpx;
  font-size: 40rpx;
}
.news_in_1_text_address{
  height: 10rpx;
  font-size: 25rpx;
  color: #a7aaa7;
}
.news_in_1_buy{
  margin-left: 20rpx;
  width: 25%;
  font-weight: bold;
  text-align: center;
  border-radius: 20rpx;
  padding-top: 20rpx;
  background-color: rgb(243, 145, 54);
}
.news_in_2{
  margin-top: 15rpx;
}
.news_in_2 image{
  width: 220rpx;
  height: 200rpx;
}
.news_in_3{
  height: 50rpx;
  margin-top: 5rpx;
  display: flex;
  flex-wrap: wrap;
  border-bottom: 1rpx solid #dadbda;
}